@page
@model MatisLigia_ProiectExamen.Pages.Conditions.IndexModel

@{
    ViewData["Title"] = "Index";
}


<p>
    <a asp-page="Create">Add new condition</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Condition[0].ConditionName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Condition) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ConditionName)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
