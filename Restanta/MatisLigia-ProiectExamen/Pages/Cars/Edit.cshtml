@page
@model MatisLigia_ProiectExamen.Pages.Cars.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Car</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Car.ID" />
            <div class="form-group">
                <label asp-for="Car.CarModel" class="control-label"></label>
                <input asp-for="Car.CarModel" class="form-control" />
                <span asp-validation-for="Car.CarModel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.Capacity" class="control-label"></label>
                <input asp-for="Car.Capacity" class="form-control" />
                <span asp-validation-for="Car.Capacity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.Capacity" class="control-label"></label>
                <input asp-for="Car.Price" class="form-control" />
                <span asp-validation-for="Car.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.Price" class="control-label"></label>
                <input asp-for="Car.LunchDate" class="form-control" />
                <span asp-validation-for="Car.LunchDate" class="text-danger"></span>
            </div>
            <label asp-for="Car.LunchDate" class="control-label">Brand Name</label>
            <select asp-for="Car.LunchDate" class="form-control" asp-items="ViewBag.BrandID">
            </select>
            <span asp-validation-for="Car.BrandID" class="text-danger"></span>
            
            <div class="form-group">
                <div class="table">
                    <table>
                        <tr>
                            @{
                                int cnt = 0;
                                foreach (var cond in Model.AssignedConditionDataList)
                                {
                                    if (cnt++ % 3 == 0)
                                    {
                                    @:</tr><tr>
                                    }
                                    @:<td>
                                        <input type="checkbox"
                                               name="selectedConditions"
                                               value="@cond.ConditionID"
                                               @(Html.Raw(cond.Assigned ? "checked=\"checked\"" : "")) />
                                        @cond.ConditionID @: @cond.Name
                                    @:</td>
                                }
                            @:</tr>
                            }
                        </table>
                    </div>
                </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
